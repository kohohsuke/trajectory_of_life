<%= render "shared/second-header" %>

<h2>サインイン</h2>

<div class="container">
  <%= form_with model: @user, url: user_session_path, class: "sign-form", local: true do |f| %>
    <div class="form-text-wrap">
      <label class="form-text">Eメール</label>
    </div>
    <div class="form-group">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field" %>
    </div>

    <div class="form-text-wrap">
      <label class="form-text">パスワード</label>
    </div>
    <div class="form-group">
      <%= f.password_field :password, autocomplete: "new-password", class: "field" %>
    </div>

    <div class="register-btn">
      <%= f.submit "ログイン", class: "register-blue-btn" %>
    </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>
<%= render "shared/footer" %>